{#
/**
 * @file
 * Theme override for a 'radios' #type form element.
 *
 * Available variables
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The rendered radios.
 *
 * @see template_preprocess_radios()
 */
#}
{# Remove aria-required, it's not needed if required is set on a form element. #}
{% set attributes = attributes.removeAttribute('aria-required') %}
<div{{ attributes.addClass('form-radios') }}>{{ children }}</div>
