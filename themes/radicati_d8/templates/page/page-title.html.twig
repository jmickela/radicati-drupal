{#
/**
* @file
* Theme override for page titles.
*
* Available variables:
* - title_attributes: HTML attributes for the page title element.
* - title_prefix: Additional output populated by modules, intended to be
*   displayed in front of the main title tag that appears in the template.
* - title: The page title, for use in the actual content.
* - title_suffix: Additional output populated by modules, intended to be
*   displayed after the main title tag that appears in the template.
*/
#}
{% if landing_header_background %}
  {% include "@organisms/99-widgets/25-landing-page-title/00-landing-page-title.twig" with {
    title_prefix: title_prefix,
    title_suffix: title_suffix,
    title: title,
    landing_header_background: landing_header_background
  } only %}
{% elseif resource_header_background %}
  {% include "@organisms/99-widgets/27-resource-page-title/00-resource-page-title.twig" with {
    title_prefix: title_prefix,
    title_suffix: title_suffix,
    title: title,
    resource_header_background: resource_header_background,
    body: field_hero_text
  } only %}
{% else %}

  {{ title_prefix }}
  {% if title %}
    <h1 {{ bem('title') }}>{{ title }}</h1>
  {% endif %}
  {{ title_suffix }}
{% endif %}

